<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecetaActivity.RecetaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <!-- TÃ­tulo INGREDIENTES -->
                <TextView
                    android:id="@+id/tvReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="INGREDIENTES"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <!-- Lista de Ingredientes -->
                <TextView
                    android:id="@+id/tvIngredientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Lista de ingredientes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@android:drawable/ic_menu_view"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"/>

        </LinearLayout>

        <!-- Texto Instrucciones -->
        <TextView
            android:id="@+id/tvInstrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instrucciones"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="4dp"/>

        <!-- WebView para YouTube -->
        <WebView
            android:id="@+id/wvYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
